{
    "name" : "scheme-in-chrome",
    "version": "0.1",
    "background": {
        "scripts": ["background/eventPage.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "background/popup.html",
        "default_icon": {
             "19": "img/icon19.png",
             "38": "img/icon38.png"
        }
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16":  "img/icon16.png",
        "48":  "img/icon48.png",
        "128": "img/icon128.png" 
    },
    "manifest_version": 2
}
